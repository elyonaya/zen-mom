{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link href="{{ asset('css/info.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
   
	<main>
	<div id='deconnexion'>
   {% if app.user %}
				<div class="mb-3">
				    <div class="mb-2">
					Bonjour
					{{ app.user.prenom }}
					{{ app.user.nom }}
					</div>
					<div>
						<a href="{{ path('app_logout') }}">Déconnexion</a>
					</div>	
				</div>

			{% endif %}
   </div>
   <div id="interne">
		<aside>
			<!--Les informations personnelles-->
			<div class="mes-informations">
				<div id="imgperso">
					<img src="{{ asset('images/test.jpg') }}" alt="">
				</div>
				<div class="menu">
					<button id="info">Mes informations</button>
					<button>Mes cartes cadeaux</button>
					<button>Mes reservations</button>
					<button>Gérer mon compte</button>
				</div>
			</div>
		</aside>
		<!--formulaire-personnelles-->
		<section class="container1">
			<div
				class="formulaire-personnelles">
				<!--Début du formulaire-->

				<h1>Mes informations</h1>

				{{ form_errors(form) }}

				{{ form_start(form) }}
				{{ form_row(form.nom , {id:'nom'} ) }}<br>
				{{ form_row(form.prenom , {id:'prenom'}) }}<br>
				{{ form_row(form.datenaissance , {id:'birthday'}) }}<br>
				{{ form_row(form.adresse1 , {id:'adresse1'}) }}<br>
				{{ form_row(form.adress2 , {id:'adress2'}) }}<br>
				{{ form_row(form.code_postale , {id:'code_postale'}) }}<br>
				{{ form_row(form.ville , {id:'ville'}) }}<br>
				{{ form_row(form.email , {id:'email'}) }}<br>
				{{ form_row(form.password, {label: 'Password',id:'pwd'}) }}<br>
				<button type="submit" class="btn btnM " id="save">Modifier</button>


				{{ form_end(form) }}
				{# Bouton de suppression de compte #}
				<form action="{{ path('app_deleteAccount', {id: app.user.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');">
					<button type="submit" class="btn btn-danger" id="delete">Supprimer mon compte</button>
				</form>
			</div>

		</div>
	</section>
	</div>
</main>{% endblock %}
